<p id="notice"><%= notice %></p>

<h1>All Artists</h1>

<p>
<%= link_to new_artist_path do %>
  <i class="fa fa-plus-circle" aria-hidden="true"></i> New Artist
<% end %>
</p>
  <div class="row">
    
    <% @artists.each do |artist| %>
       <div class="col-md-6">
        
        <div class="well">


        <h4><%= link_to artist.name, artist %></h4>
        <p>
        <% artist.rating.to_i.times do %>
        <i class="fa fa-star yellow" aria-hidden="true"></i>
        <% end %>
      </p>
        <p><%= link_to edit_artist_path(artist) do %>
           <i class="fa fa-pencil" aria-hidden="true"></i> Edit
          <% end %>
        <%= link_to artist, method: :delete, data: {pconfirm: 'Are you sure?' } do %>
           <i class="fa fa-trash" aria-hidden="true"></i> Delete
        <% end %>
      </div>
    </div>
 
    <% end %>
    
  </div>


